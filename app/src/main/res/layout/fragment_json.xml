<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.JsonFragment">

    <EditText
        android:id="@+id/jsonContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="top|start"
        app:layout_constraintBottom_toTopOf="@+id/jsonSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/jsonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="保存"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/jsonExport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="复制"
        app:layout_constraintBottom_toBottomOf="@+id/jsonSave"
        app:layout_constraintStart_toEndOf="@+id/jsonSave"
        app:layout_constraintTop_toTopOf="@+id/jsonSave" />

    <Button
        android:id="@+id/jsonImport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="粘贴"
        app:layout_constraintBottom_toBottomOf="@+id/jsonExport"
        app:layout_constraintStart_toEndOf="@+id/jsonExport"
        app:layout_constraintTop_toTopOf="@+id/jsonExport" />

</androidx.constraintlayout.widget.ConstraintLayout>